<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap"rel="stylesheet" />
    <link rel="stylesheet" href="/public/css_folder/style.css" />
    <title> Opus Kore | Home Page </title>
</head>
<header>
    <nav>
        <% if(errorMessages.length > 0) {%>
            <% errorMessages.forEach(message=>{%>
                <div class='error'><%=message%></div>
            <%});%>
        <%}%>
        <% if(successMessages.length > 0) {%>
            <% successMessages.forEach(message=>{%>
                <div class='success'><%=message%></div>
            <%});%>
        <%}%>
        <div class="main-nav">
            <div class="logo-container"><a class="home-link" href="/"><img src="/public/images_folder/OpusKore_logo.png" alt="nav-logo" /></a></div>
            <div class="site-nav">				
                <ul class="nav-items">
                    <li><a class="nav-link" href="/">Home</a></li>
                    <li><a class="nav-link" href="/trades">Explore</a></li>
                    <li><a class="nav-link" href="/trades/new">List item</a></li>
                </ul>
            </div>
            <div class="user-nav">
                <% if(!user) {%>
                    <ul class="nav-items">
                        <li><a class="nav-link" href="/users/newUser">Sign Up</a></li>
                        <li><a class="nav-link" href="/users/login">Login</a></li>
                    </ul>
                <%} else {%>
                    <div class="nav-items-2">
                        <div class="account">
                            <a class="nav-link" href="/users/profile"><img src="/public/images_folder/account-icon.png" alt="nav-account-icon"/></a>
                        </div>
                        <div class="logout">
                            <a class="nav-link" href="/users/logout">Logout</a>
                        </div>
                    </div>

                <%}%>
            </div>
        </div>
        <div class="grad-nav"></div>
    </nav>
</header>